################################
### Базовые настройки приложения
################################
VITE_APP_NAME="Карты путешественника"
VITE_APP_ENV=development
VITE_APP_VERSION=1.0.0

################################
### Настройки Firebase
################################
VITE_FIREBASE_API_KEY=your_firebase_api_key
VITE_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your-project-id
VITE_FIREBASE_STORAGE_BUCKET=your-bucket.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=123456789012

################################
### Настройки карт (выберите один)
################################
VITE_MAPS_PROVIDER=yandex
VITE_YANDEX_MAPS_API_KEY=your_yandex_maps_key
# ИЛИ для Google Maps:
# VITE_GOOGLE_MAPS_API_KEY=your_google_maps_key

################################
### Дополнительные API (опционально)
################################
# VITE_OPENWEATHER_API_KEY=your_openweather_key

################################
### Настройки приложения
################################
VITE_DEFAULT_LANGUAGE=ru
VITE_MAX_PHOTO_SIZE_MB=5
VITE_MAX_TRAVEL_NOTES=100
VITE_DEFAULT_MAP_ZOOM=10

################################
### URL API
################################
# Для разработки:
VITE_API_BASE_URL=http://localhost:3000/api

# Для production (заменить при деплое):
# VITE_API_BASE_URL=https://api.yourdomain.com